<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainView"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:text="What Date was Morehouse College Founded?"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="February 14, 1867"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:background="@drawable/answer2_color"
        android:elevation="5dp"
        android:text="February 14, 1867"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/answer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="228dp"
        android:background="@drawable/answer2_color"
        android:elevation="5dp"
        android:text="March 30, 1989"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/answer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp"
        android:background="@drawable/answer2_color"
        android:elevation="5dp"
        android:text="December 25, 1792"
        android:textSize="30sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/answer_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="-70dp"
        android:src="@drawable/iconmonstr_eye_8" />
    <ImageView
        android:id="@+id/isShowing"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/answer_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="-70dp"
        android:src="@drawable/iconmonstr_eye_6" />

</RelativeLayout>